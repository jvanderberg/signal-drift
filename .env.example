# Lab Controller Environment Variables
# Copy this file to .env and modify as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for HTTP and WebSocket server
# Default: 3001
PORT=3001

# Device polling interval in milliseconds
# Lower values = more responsive UI, higher USB/serial traffic
# Default: 250 (4 updates per second)
POLL_INTERVAL=250

# History window in milliseconds
# How long to keep measurement history for charts
# Default: 1800000 (30 minutes)
HISTORY_WINDOW=1800000

# Device scan interval in milliseconds
# How often to check for new/disconnected devices
# Default: 10000 (10 seconds)
SCAN_INTERVAL=10000

# =============================================================================
# SIMULATION MODE
# =============================================================================

# Enable simulated devices instead of real hardware
# Useful for development/testing without physical devices
# Default: false
USE_SIMULATED_DEVICES=false

# =============================================================================
# SIMULATION PARAMETERS (only used when USE_SIMULATED_DEVICES=true)
# =============================================================================

# Measurement stability in parts per million
# Lower = more stable readings
# Default: 100
SIM_MEASUREMENT_STABILITY_PPM=100

# Measurement noise floor in millivolts
# Default: 1.0
SIM_MEASUREMENT_NOISE_FLOOR_MV=1.0

# PSU output impedance in ohms
# Affects load regulation simulation
# Default: 0.005
SIM_PSU_OUTPUT_IMPEDANCE=0.005

# Load CV mode gain (A/V)
# How much current changes per volt in CV mode
# Default: 10
SIM_LOAD_CV_GAIN=10

# PSU response latency in milliseconds
# Default: 50
SIM_PSU_LATENCY_MS=50

# Load response latency in milliseconds
# Default: 20
SIM_LOAD_LATENCY_MS=20

# Latency jitter in milliseconds
# Adds randomness to response times
# Default: 5
SIM_LATENCY_JITTER_MS=5

# Simulated load serial number
# Default: DL3A000000001
SIM_LOAD_SERIAL=DL3A000000001

# =============================================================================
# DATA STORAGE
# =============================================================================

# Custom data directory for sequences and trigger scripts
# If not set, uses platform-specific defaults:
#   Linux: $XDG_DATA_HOME/lab-controller or ~/.local/share/lab-controller
#   macOS: ~/Library/Application Support/lab-controller
#   Windows: %APPDATA%/lab-controller
# LAB_CONTROLLER_DATA_DIR=/path/to/data
